template(name='UxHome')

    div(class='ux-home row step step1 page-footer')
        div(class='icon-container col s3 m3 l3 step1')
            div(class='heading')
                p 1
                    span st.
                p STEP
            div(class='icon')

        div(class='step-content col s9 m9 l9')
            p Choose the file that you want to timestamp.
            div(class='file-drop col s7 m7 l7')
                p Drop the file here or click to pick one
            button(class='file-pick-opener col s3 m2 l2 offset-s1 offset-m1 offset-l1') PICK


        div(class='icon-container col s3 m3 l3 step2')
            div(class='heading')
                p 2
                    span nd.
                p STEP
            div(class='icon')

        div(class='step-content col s9 m9 l9')
            p Select the TSA you want to use.

            p
                input(name='group1' type='radio' id='test1')
                label(for='test1') Red
