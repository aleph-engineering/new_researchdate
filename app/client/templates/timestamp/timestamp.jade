template(name='Timestamp')
    fieldset(data-role='controlgroup')
        div(class='timestamp row')
            div(class='file-field input-field')
                div(class='btn')
                    span {{i18n 'timestamp.file'}}
                    input(type='file' name='artifact' id='generate-input')
                div(class='file-path-wrapper')
                    input(class='file-path validate' type='text' placeholder="{{i18n 'timestamp.placeholder' }}")
            form(id='artifact-form' method='post' action="{{pathFor 'timestamp'}}" class='col s12')
                div(id='hash-container' class='row')
                    div(class='input-field')
                        label(for='hash' class='active') {{i18n 'timestamp.hash'}}
                        input(type='text' id='hash' name='hash' value='#{artifactHash}' readonly)
                div(class='row')
                    button(type='submit' class='btn waves-effect waves-light' name='timestamp') {{i18n 'timestamp.timestamp_btn'}}
