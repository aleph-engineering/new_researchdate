template(name='Timestamp')
    div.container
        section(id="content-container")
            ul.tabs
                li.tab.col.l6
                    a(href='#generate-tab') Generate
                li.divider
                li.tab.col.l6
                    a(href='#verify-tab') Verify
    div#underline.col.s12.m12.l12

    #generate-tab.col.s12.container
        .row.step
            .number.col.s2.m2.l2.left
                h5
                    span 1
                    | ST. STEP
            .check.col.s2.m2.l2
                img.materialboxed(src='/img/check.svg')
            .content-container.col
                h5 {{i18n 'timestamp.step_1_name'}}
                +dropzone class='dropzone' id='original-artifact' dictDefaultMessage='Drop or pick files here to upload'
        .row.step
            form(id='artifact-form' method='post' action="{{pathFor 'timestamp'}}")
                .number.col.s2.m2.l2.left
                    h5
                        span 2
                        | ND. STEP
                .check.col.s2.m2.l2
                    img.materialboxed(src='/img/check.svg')
                .content-container.col
                    h5 {{i18n 'timestamp.step_2_name'}}
                    .col.s6.m4.l3
                        p
                            input(type='radio' id='free_tsa' name='tsa_server' value='https://freetsa.org/tsr' checked)
                            label(for='free_tsa') FreeTSA
                    .col.s6.m4.l3
                        p
                            input(type='radio' id='tsa_startssl' name='tsa_server' value='http://tsa.startssl.com/rfc3161')
                            label(for='tsa_startssl') Startssl
                    .col.s6.m4.l3
                        p
                            input(type='radio' id='time_certum' name='tsa_server' value='http://time.certum.pl/')
                            label(for='time_certum') Time.Certum
                    .col.s6.m4.l3
                        p
                            input(type='radio' id='zeitstempel' name='tsa_server' value='http://zeitstempel.dfn.de/')
                            label(for='zeitstempel') Zeitstempel

        .row.step
            .number.col.s1.m1.l1.left
                h5
                    span 3
                    | RD. STEP
            .check.col.s1.m1.l1
                img.materialboxed(src='/img/check.svg')
            .content-container.col.s10.m10.l0
                h5 {{i18n 'timestamp.step_3_name'}}
                .col.s5.m5.l5
                    input(id='save' type='save' placeholder='Route.../')
                .col.s5.m5.l5
                button(type='submit' class='btn' name='timestamp') {{i18n 'timestamp.save_btn'}}

        .row.step
            .number.col.s1.m1.l1.left
                h5
                    span 4
                    | TH. STEP
            .check.col.s1.m1.l1
                img.materialboxed(src='/img/check.svg')
            .content-container.col.s10.m10.l10
                h5 {{i18n 'timestamp.step_4_name'}}
                .col.s3.m3.l3
                    button(type='submit' class='btn' name='timestamp') {{i18n 'timestamp.submit_btn'}}
                .col.s7.m7.l7.progress
                    div(class='indeterminate')

