template(name='Verification')
    div(class='verification')
        h4 {{i18n 'verification.title'}}
        form(id='verify-form' method='post' class='col s12')
            div(class='file-field input-field')
                div(class='btn' class='light-blue lighten-1')
                    i(class="mdi-content-add")
                    input(type='file' name='tsr' id='tsr-hash-input' required)
                div(class='file-path-wrapper')
                    input(class='file-path validate' type='text' placeholder="{{i18n 'verification.tsr_file'}}")
            div(class='file-field input-field')
                div(class='btn' class='light-blue lighten-1')
                    i(class="mdi-content-add")
                    input(type='file' name='original' id='original-file-input' required)
                div(class='file-path-wrapper')
                    input(class='file-path validate' type='text' placeholder="{{i18n 'verification.original_file'}}")
            div(class='row')
                button(type='submit' class='btn waves-effect waves-light' id='verify' class='light-blue lighten-1') {{i18n 'verification.btn_verify'}}
